{
  "compilerOptions": {
    "target": "ES2022",
    "module": "node18",
    "moduleResolution": "node16",
    "lib": ["ESNext"],
    "rootDir": "./",
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "strict": true,
    "resolveJsonModule": true,
    "useDefineForClassFields": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noEmitOnError": true,
    "removeComments": false,
    "esModuleInterop": true
  },
  "include": ["*.mts"]
}

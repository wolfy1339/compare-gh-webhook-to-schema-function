{
  "$id": "common/webhooks_label.schema.json",
  "title": "Label",
  "type": "object",
  "properties": {
    "color": {
      "description": "6-character hex code, without the leading #, identifying the color",
      "type": "string"
    },
    "default": {
      "type": "boolean"
    },
    "description": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ]
    },
    "id": {
      "type": "integer"
    },
    "name": {
      "description": "The name of the label.",
      "type": "string"
    },
    "node_id": {
      "type": "string"
    },
    "url": {
      "description": "URL for the label",
      "type": "string",
      "format": "uri"
    }
  },
  "required": [
    "id",
    "node_id",
    "url",
    "name",
    "color",
    "default",
    "description"
  ]
}
